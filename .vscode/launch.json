{
        "version": "0.2.0",
        "configurations": [

            {
                "type": "node",
                "request": "launch",
                "name": "Launch Program",
                "program": "${workspaceRoot}\\index.js"
            },
            {
                "type": "node",
                "request": "launch",
                "name": "Tests",
                "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
                "args": [
                  "--recursive",
                  "${workspaceRoot}/tests/*.spec.js"
                ],
                "cwd": "${workspaceRoot}"
            }
        ]
    }